<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#d7cf40"/>

            <corners
                    android:radius="8dp" />
            <padding
                    android:left="5dp"
                    android:top="2dp"
                    android:right="5dp"
                    android:bottom="1dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#d7cf40"/>

            <corners
                    android:radius="8dp" />
            <padding
                    android:left="5dp"
                    android:top="2dp"
                    android:right="5dp"
                    android:bottom="1dp" />
        </shape>
    </item>

