<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:id="@+id/ac_animation_rl"
              android:background="@drawable/back_green"
              android:layout_height="fill_parent">



    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true">
        <Button android:text="strart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickStart"/>
        <Button android:text="stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickStop"/>
        <Button android:text="prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickPrev"/>
        <Button android:text="next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickNext"/>
        <TextView   android:id="@+id/ac_animation_tv_cur_frame"
                android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        <EditText android:id="@+id/ac_animation_et_fps"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="fps"
                  android:text="12"
                />

        <Button android:text="clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clear"/>


                  </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentRight="true">
        <EditText android:id="@+id/ac_animation_et_crono"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="start frame"
                  android:text="0"
                />
        <Button android:text="strart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickStartAudio"/>
        <Button android:text="stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickStopAudio"/>

        <EditText android:id="@+id/ac_animation_et_startFrame"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="start frame"
                  android:text="-1"
                />
        <EditText android:id="@+id/ac_animation_et_endFrameFrame"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="end_frame"
                  android:text="0"
                />


    </LinearLayout>


</RelativeLayout>